

<table class="tabla_contenedor">
  <div class="titulo_contenedor">
    <a href="/productos_venta/add">Agregar Producto</a>
    <h3 class="titulo_tabla">Venta Productos</h3>
    <img src="/img/aceituna 1.jpg">
    <a href="/productos_venta/enlace_bodega">Enlaces Productos</a>
  </div>

  <form action="/productos_venta/filtro" method="post">
    <div class="filtro_contenedor">
      <h3 class="titulo_flitros">Filtros</h3>
      <div class="input_filtro_contenedor">
        <input type="text" name="producto_b" placeholder="producto">
        <input type="text" name="marca_b" placeholder="Marca">
        <input type="text" name="ubicacion_b" placeholder="ubicacion">
      </div>
      <button class="btn-buscar">Buscar</button>
    </div>
  </form>
 
  <thead>
    <tr>
      <th>Producto</th>
      <th>Marca</th>
      <th>Precio</th>
      <th>Ubicacion</th>
      <th>Piso</th>
      <th>Posicion</th>
      <th class="tabla_columna_accion_th">Accion</th>
    </tr>
  </thead>
  <tbody>
  	{{#each Productos}}
    <tr>
      <td class="producto">{{producto}}</td>
      <td class="C-BTT">{{marca}}</td>
      <td class="precio">{{precio_venta}}</td>
      <td class="C-BTT">{{ubicacion_venta}}</td>
      <td class="C-BTT">{{piso_venta}}</td>
      <td class="C-BTT">{{posicion_venta}}</td>
      <td class="btns-contenedor">
        <div class="btns">
         <a href="/productos_venta/edit/{{id}}" class="btn-verde">Editar</a>
         <a href="/productos_venta" class="btn-info">Info</a>   
         <a href="/productos_venta/delete/{{id}}" class="btn-rojo">Borrar</a> 
        </div>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>




