   <form action="/productos_traslado/filtro" method="post">
    <div class="filtro_contenedor">
      <h3 class="titulo_flitros">Filtros</h3>
      <div class="input_filtro_contenedor">
        <input type="text" name="producto_b" placeholder="producto">
        <input type="text" name="marca_b" placeholder="Marca">
        <input type="text" name="ubicacion_b" placeholder="ubicacion">
    </div>
    <div class="btns-filtro-contenedor">
      <button class="btn-buscar">Buscar</button>
    </div>
    </div>
  </form> 

  <thead>
    <tr>
      <th>Producto</th>
      <th>Marca</th>
      <th>Ubicacion</th>
      <th>Piso</th>
      <th>posicion</th>
      <th class="tabla_columna_accion_th">Accion</th>
    </tr>
  </thead>
  <tbody>
  	{{#each Productos}}
    <tr>
      <td class="producto">{{producto}}</td>
      <td class="C-BTT">{{marca}}</td>
      <td class="C-BTT">{{ubicacion_venta}}</td>
      <td class="C-BTT">{{piso_venta}}</td>
      <td class="C-BTT">{{posicion_venta}}</td>

      {{#if producto_traslado}}
      <td class="btns-contenedor"> 
        <div class="btns">
          <form method="post" action="/productos_traslado/delete_list/{{id}}">
            <button class="btn-rojo">quitar de Lista</button>
          </form>
        </div>
      </td>
      {{else}}
      <td class="btns-contenedor"> 
        <div class="btns">
        <form method="post" action="/productos_traslado/add_list/{{id}}">
          <input type="number" step="0.01" name="cantidad_traslado" placeholder="C" required>
          <button class="btn-verde">Agregar a Lista</button>
        </form>
      </div>
      </td>
      {{/if}}
    </tr>
    {{/each}}

  </tbody>
</table>




